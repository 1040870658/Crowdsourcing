<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:alpha="0.03"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/iv_shop_back"
        android:src="@drawable/shop_back"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:id="@+id/ll_topbar"
        >
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:src="@drawable/selector_back"
            android:id="@+id/ib_top_back"
            android:onClick="GoBack"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:text="StarBuck"
            android:textSize="20sp"
            android:id="@+id/tv_shop_title"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_topbar"
        android:layout_marginBottom="32dp"
        android:id="@+id/rcv_commodity_list"/>
    <RelativeLayout
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:id="@+id/rl_bottombar">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:id="@+id/iv_order_logo"
            android:src="@drawable/logo_bag"/>
        <TextView
            android:layout_marginLeft="@dimen/small_v_gap"
            android:layout_toRightOf="@id/iv_order_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price:  "
            android:textAlignment="center"
            android:id="@+id/tv_fix_price"/>
        <TextView
            android:layout_toRightOf="@id/tv_fix_price"
            android:textAlignment="center"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textColor="@color/orange"
            android:text="$0.0"
            android:id="@+id/tv_order_price"/>
        <Button
            android:layout_width="80dp"
            android:id="@+id/btn_buy"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:text="Launch"
            android:background="@color/orange"
            android:textColor="@color/white" />
    </RelativeLayout>
</RelativeLayout>