<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_margin="@dimen/small_v_gap"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/iv_item_pic"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ib_minus"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="#00000000"
        android:src="@drawable/btn_minus"/>
    <TextView
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_toLeftOf="@id/ib_minus"
        android:id="@+id/tv_item_num"
        android:text="0"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ib_add"
        android:layout_toLeftOf="@id/tv_item_num"
        android:layout_centerVertical="true"
        android:background="#00000000"
        android:src="@drawable/selector_addbutton"/>
    <TextView
        android:layout_toRightOf="@id/iv_item_pic"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_item_name"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_item_pic"
        android:layout_alignParentBottom="true"
        android:textColor="@color/orange"
        android:textSize="18sp"
        android:id="@+id/tv_price"
        />
    <TextView
        android:layout_marginLeft="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_price"
        android:textColor="@color/orange"
        android:textSize="16sp"
        android:id="@+id/tv_stock"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
